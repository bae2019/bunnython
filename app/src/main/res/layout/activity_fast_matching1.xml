<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fast_matching1">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-23dp" />

    <LinearLayout
        android:id="@+id/start_point"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#C8C6C6"
            android:gravity="center"
            android:text="출 발 지 점"
            android:textColor="#546E7A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_start_point1"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="현 위치"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/include2"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/end_point"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="#C8C6C6"
            android:gravity="center"
            android:text="도 착 지 점"
            android:textColor="#546E7A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_end_point1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="어디로 갈까요?"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/include2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#B1B0B0"
            android:gravity="center"
            android:text="찾기"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/end_point_shortcut"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="148dp"
        android:background="#C8C6C6"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/end_point_shortcut2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="306dp"
            android:background="#B1B0B0"
            android:gravity="center"
            android:text="회사"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_point_shortcut1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="362dp"
            android:background="#B1B0B0"
            android:gravity="center"
            android:text="집"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_point_shortcut3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="250dp"
            android:background="#B1B0B0"
            android:gravity="center"
            android:text="학교"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_point_shortcut4"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="201dp"
            android:background="#B1B0B0"
            android:gravity="center"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/knu2" />

    <include
        android:id="@+id/include"
        layout="@layout/bottombar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>